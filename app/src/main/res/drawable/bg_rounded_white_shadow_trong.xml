<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái hover -->
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFA500"/> <!-- Màu khi hover -->
            <corners android:radius="20dp"/> <!-- Độ cong của góc -->
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#DDDDDD"
                android:angle="90"
                />
            <!-- Thiết lập màu nền cho button -->
            <stroke
                android:width="1dp"
                android:color="#CCCCCC"/>

            <corners android:radius="20dp" /> <!-- Bán kính bo tròn -->

        </shape>
    </item>

</selector>